<div class="container" id='ContactMe'>
        <h1 class="logoFont Cheading">Contact Us</h1><br/>
        <div class="row">
            <div class="col-md-6">
                <br>
                <div class="container">
                    
                    <form id="myForm" method="POST" action="/">
                        <div>
                            <%if(Message.status === 0){%>
                                <button class="alert alert-danger mt-10 mb-10 mFont messageBox" role="alert"> <%=Message.msg%> </button>
                            <%}%>
                            <%if(Message.status === 1){%>
                                    <button class="alert alert-success mt-10 mb-10 mFont messageBox" role="alert"> <%=Message.msg%> </button>
                            <%}%>
                        </div>
                        <div class="form-group">
                            <label for="FName" id="nameH" class="mFont">Hello</label>
                            <input 
                            type="text" 
                            class="form-control mFont" id="FName" 
                            placeholder="Enter Name"
                            name="Name"
                            required
                            />
                        </div>
                        <div class="form-group">
                            <label for="EmailId" class="mFont"> Email Address</label>
                            <input 
                            type="email" 
                            class="form-control mFont" id="EmailId" 
                            placeholder="Enter Email Address"
                            name="Email" 
                            required
                            />
                        </div>
                        <div class="form-group">
                            <label for="message" class="mFont"> Feel Free To Message Us </label>
                            <textarea 
                            type="text" 
                            class="form-control mFont" id="message" 
                            placeholder="Message" rows="3"
                            name="Message"
                            required
                            ></textarea>
                        </div>
                        <button class="btn btn-lg btn-block yel-outline mFont">Send Message</button>
                    </form>
                </div>
            </div>

            
            <div class="col-md-6">
                <img src="./assets/ContactIcon.svg" class="contactIcon" alt="Contact Icon">
            </div> 
            
        </div>
</div>
